# 서버 설정
PORT=8080
NODE_ENV=development

# 프론트엔드 URL (CORS 설정용)
FRONTEND_URL=http://localhost:5173

# 데이터베이스 설정
DB_PATH=./data/board.db

# 로그 레벨
LOG_LEVEL=info

# API 설정
API_PREFIX=/api
MAX_REQUEST_SIZE=10mb

# 보안 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=10

# 개발 도구
ENABLE_SWAGGER=true
ENABLE_CORS=true